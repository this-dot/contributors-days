<section class="container content-section">
  <div class="row upcoming-days">
    {{#each (sort-by 'date:desc' model.events) as |event|}}
      {{event-card event=event}}
    {{/each}}
  </div>

  <h2>
    Updates
  </h2>

  <div class="row">
    {{#let (sort-by 'date:desc' model.posts) as |posts|}}
      {{#each (slice 0 3 posts) as |post|}}
        {{article-card post=post class="col-lg-4" showSummary=true}}
      {{/each}}
      {{#if (gt posts.length 3)}}
        <a href="{{href-to 'updates'}}">See all updates</a>
      {{/if}}
    {{/let}}
  </div>
</section>
