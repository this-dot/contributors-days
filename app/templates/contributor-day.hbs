<header class="app-header">
  <div class="container">
    <div class="row">
      <div class="titles col-md-4">
        <h1>
          {{#link-to 'index'}}Contributor Days{{/link-to}}
        </h1>
        <p>
          Make open source, not war.
        </p>
      </div>
      <div class="col-md-7 push-lg-1">
        {{terminal-prompt commands=model.commands}}
      </div>
    </div>
  </div>
</header>

{{outlet}}

<section class="container framework-info">
  <header class="framework-header">
    <div class="col-md-6 logo-wrap">
      <em class="{{model.framework}} day-logo col-md-4"></em>
      <h2 class="title col-md-8">
        <strong>{{model.framework}}</strong>
        Contributor Days
      </h2>
    </div>
    <div class="col-md-3 framework-meta">
      {{moment-format model.date 'MMM Do, YYYY'}}
    </div>
    <div class="col-md-3 framework-meta">
      {{model.location}}
    </div>
  </header>

  <div class="row framework-intro">
    <div class="col-lg-3">
      <p>
        Contributor Days strives to create stronger relationships and focus in the existing community while providing an opportunity for other developers who may not have contributed to the specific project a chance to explore new opportunities.
      </p>
    </div>
    <div class="col-lg-9">
      <div class="video-wrapper">
        <iframe width="560" height="315" src="https://www.youtube.com/embed/VBXMso56Ovw" frameborder="0" allowfullscreen></iframe>
      </div>
    </div>
  </div>
</section>

{{#if model.videos}}
  {{videos-list 
    title="Talks and discussions"
    tagName="section"
    class="framework-videos-list container" 
    videos=model.videos
    playlist=model.playlist
  }}
{{/if}}

<section class="container framework-people">
  <h2>
    Leads
  </h2>
  <div class="row leads-list">
    {{#each leads as |lead|}}
      {{person-card person=lead class="col-md-3"}}
    {{/each}}
  </div>
</section>

{{#if attendees}}
  <section class="container framework-people">
    <h2>
      Attendees
    </h2>
    <div class="row attendees-list">
      {{#each attendees as |attendee|}}
        {{person-card person=attendee class="col-md-3"}}
      {{/each}}
    </div>
  </section>
{{/if}}
